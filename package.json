{
  "name": "test02",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@types/jest": "24.0.23",
    "@types/node": "12.12.11",
    "@types/react": "16.9.11",
    "@types/react-dom": "16.9.4",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-scripts": "3.2.0",
    "typescript": "3.7.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "npm run eslint"
    ],
    "src/**/*.{css,scss,json,md}": [
      "npm run prettier"
    ]
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "prettier": "prettier --check --loglevel silent src/**/*.{css,scss,json,md}",
    "prettier-write": "prettier --write --loglevel silent src/**/*.{css,scss,json,md}",
    "eslint": "eslint src/**/*.{js,jsx,ts,tsx}",
    "eslint-fix": "eslint --fix src/**/*.{js,jsx,ts,tsx}",
    "lint": "npm run eslint && npm run prettier && echo Eslint and Prettier Checks Complete.",
    "lint-fix": "npm run eslint-fix && npm run prettier-write && echo Eslint and Prettier Fixes Complete."
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.4.3",
    "prettier": "latest"
  }
}
